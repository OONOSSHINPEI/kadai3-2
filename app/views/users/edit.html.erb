<main>

<div class="container px-5 px-sm-0">  
<div class="row">

<div class="col-sam-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">


<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="inputName">Name</label>
</div>
<div class="form-group" %>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
</div>
<div class="form-group">
  <label for="inputImage">ProfileImage</label>
<div class="form-group">
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
</div>
<div class="form-group">
  <label for="inputintroduction">introduction</label>
</div>
<div class="form-group">
  <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Update User", class: 'btn btn-default btn-secondary'  %>
</div>
<% end %>



</div>

</div>
</div>

</main>