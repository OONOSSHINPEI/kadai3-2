
<h2>User Info</h2>
<!-- ユーザーの詳細 -->
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3>Name
   <h4><%= user.name %></h4>
  </h3>
  <h3>introduction
   <h4><%= user.introduction %></h4>
  </h3>
  
  <%= link_to "プロフィール編集", edit_user_path(user) %>
  
  
</div>


<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	<br>
  <%= f.submit 'Create Book' %>
  
<% end %>