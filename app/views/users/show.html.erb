<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>




<div class="container px-5 px-sm-0">  
<div class="row">

<div class="col-md-3"><%= render "info", user: @user, book: @book %></div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
  <thead>
    <div class="form-group">
      <th colspan="1"></th>
    </div>
    <div class="form-group">
      <th class="books">Title</th>
    </div>
    <div class="form-group">
      <th class="books">Opinion</th>
    </div>
    
  </thead>
  
  

 <tbody>
     <% @books.each do |book| %>
   
     <tr>
      <td>   
        <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      
      <td><%= book.body %></td> 
      <td></td>
      
     </tr>
     
   <% end %>

</table>

</div>
</div>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>