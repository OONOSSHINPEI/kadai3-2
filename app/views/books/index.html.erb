<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   
   

<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render "users/info", user: current_user, book: @new_book %>

<table>
  
  <h2>Books</h2>
  <thead>
    <tr>
      
      <th class="books">Title</th>
      <th class="books">Opinion</th>
      
    </tr>
  </thead>

 <tbody>
     <% @books.each do |book| %>
   
     <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td><%= link_to book.title, user_session_path %></td>
      <td><%= book.user.name %></td>
       
      <td></td>
     
     </tr>
     
    
     
   <% end %>
 </tbody>
</table>

